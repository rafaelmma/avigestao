rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra para logos dos usuários
    match /logos/{userId}/{allPaths=**} {
      // Apenas o dono pode ler e escrever suas logos
      allow read: if true; // Permite ler para exibir no app
      allow write: if request.auth != null && request.auth.uid == userId 
                      && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                      && request.resource.contentType.matches('image/.*');
    }
    
    // Regra para arquivos de usuários
    match /users/{userId}/{allPaths=**} {
      // Apenas o dono pode ler e escrever seus próprios arquivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para arquivos públicos (ex: verificação de pássaros)
    match /public/{allPaths=**} {
      // Qualquer um pode ler, mas apenas usuários autenticados podem escrever
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra para anexos do feed comunitário
    match /community_posts/attachments/{postId}/{fileName} {
      // Leitura pública para exibir anexos
      allow read: if true;

      // Escrita apenas por usuários autenticados; validação rigorosa
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.size > 1024              // Min 1KB (evita uploads vazios)
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp|gif)');
      
      // Deleção: apenas admin ou via Cloud Functions (não permitir deletion direto)
      allow delete: if false;
    }
    
    // Bloqueia acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

