rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra para arquivos de usuários
    match /users/{userId}/{allPaths=**} {
      // Apenas o dono pode ler e escrever seus próprios arquivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para arquivos públicos (ex: verificação de pássaros)
    match /public/{allPaths=**} {
      // Qualquer um pode ler, mas apenas usuários autenticados podem escrever
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Bloqueia acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

