rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra para logos dos usuários
    match /logos/{userId}/{allPaths=**} {
      // Apenas o dono pode ler e escrever suas logos
      allow read: if true; // Permite ler para exibir no app
      allow write: if request.auth != null && request.auth.uid == userId 
                      && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                      && request.resource.contentType.matches('image/.*');
    }
    
    // Regra para arquivos de usuários
    match /users/{userId}/{allPaths=**} {
      // Apenas o dono pode ler e escrever seus próprios arquivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para arquivos públicos (ex: verificação de pássaros)
    match /public/{allPaths=**} {
      // Qualquer um pode ler, mas apenas usuários autenticados podem escrever
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra para anexos do feed comunitário
    match /community_posts/attachments/{allPaths=**} {
      // Leitura pública para exibir anexos
      allow read: if true;

      // Escrita apenas por usuários autenticados; exigir imagem e tamanho máximo de 5MB
      // Recomendamos incluir metadata.authorId no upload para facilitar auditoria
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      // Deleção: somente proprietário do objeto (não há forma direta de verificar owner sem metadata),
      // então permitimos delete apenas para authenticated (admins podem gerenciar via console/Cloud Functions)
      allow delete: if request.auth != null;
    }
    
    // Bloqueia acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

