  "indexes": [
    {
      "collectionGroup": "public_birds",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isPublic", "mode": "ASCENDING" },
        { "fieldPath": "createdAt", "mode": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "community_messages",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "toUserId", "mode": "ASCENDING" },
        { "fieldPath": "createdAt", "mode": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "community_messages",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "toUserId", "mode": "ASCENDING" },
        { "fieldPath": "read", "mode": "ASCENDING" },
        { "fieldPath": "createdAt", "mode": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "bird_verifications",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "birdId", "mode": "ASCENDING" },
        { "fieldPath": "timestamp", "mode": "DESCENDING" }
      ]
    }
  ],
  "fieldOverrides": [
    {
      "collectionGroup": "birds",
      "fieldPath": "ringNumber",
      "indexes": [
        { "order": "ASCENDING", "queryScope": "COLLECTION_GROUP" },
        { "order": "DESCENDING", "queryScope": "COLLECTION_GROUP" }
